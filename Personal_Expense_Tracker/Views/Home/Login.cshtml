@model Personal_Expense_Tracker.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="flex min-h-screen bg-gray-100">
    <!-- Left Side Promo Panel -->
    <div class="hidden md:flex md:w-1/3 bg-cover bg-bottom p-6" style="background-image:url('/images/Expense.jpg');">
        <div class="self-end">
            
          
        </div>
    </div>

    <!-- Form Panel -->
    <div class="flex items-center justify-center w-full md:w-2/3">
        <form asp-action="Login" method="post" class="max-w-xl w-full p-8 space-y-6 bg-white shadow-lg rounded-lg">
            <h3 class="text-4xl font-bold text-center">Login</h3>

            <div class="flex flex-wrap -mx-3">
                <div class="w-full px-3 mb-6 md:w-1/2">
                    <label asp-for="FirstName" class="block mb-2 text-xs font-bold text-gray-700 uppercase">
                        First Name
                    </label>
                    <input asp-for="FirstName"
                           class="block w-full px-4 py-3 text-gray-700 border-b-2 border-gray-500 rounded focus:outline-none"
                           required />
                    <span asp-validation-for="FirstName" class="text-red-600 text-sm"></span>
                </div>
                <div class="w-full px-3 mb-6 md:w-1/2">
                    <label asp-for="LastName" class="block mb-2 text-xs font-bold text-gray-700 uppercase">
                        Last Name
                    </label>
                    <input asp-for="LastName"
                           class="block w-full px-4 py-3 text-gray-700 border-b-2 border-gray-500 rounded focus:outline-none"
                           required />
                    <span asp-validation-for="LastName" class="text-red-600 text-sm"></span>
                </div>
            </div>

            <div>
                <label asp-for="Password" class="block mb-2 text-xs font-bold text-gray-700 uppercase">
                    Password
                </label>
                <input asp-for="Password" type="password"
                       class="block w-full px-4 py-3 text-gray-700 border-b-2 border-gray-500 rounded focus:outline-none"
                       required />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div class="flex justify-center">
                <button type="submit"
                        class="px-8 py-2 font-bold text-white rounded-full shadow bg-black hover:bg-gray-800">
                    Login
                </button>
            </div>

            <div asp-validation-summary="All" class="text-red-600 text-center text-sm"></div>
        </form>
    </div>
</div>
